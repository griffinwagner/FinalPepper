<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="/assets/homestyles.css">
    <title>PepperBlinds | Homepage</title>
  </head>
  <body>
    <div id="backgroundimage">
      <div id="buttonsbox">
        <h1 id="sitename">Pepper Blinds <h1>
        <button type="button" class="sign" id="signin">Hello, <%=user.username%>!</button>
      </div> <!-- TopBarStuff -->
      <br><br>
      <div id="OfferStuff">
        <div id="specialoffers">
          <h4 id="sofontstuff">Special Offers!...</h4>
            <%for (var i = 0; i < options.length; i++) { %>
          <div id="sOffers" style="background-image:url('<%=options[i].imageLink%>');">
            <div id="sOfferInfo">
              <h1 id="dahspecnameinf"><a href="/treatment/<%=options[i].id%>" class="gotoblindpurchase"><%=options[i].name%></a></h1>
                <p id="dahspecdescinf"><%=options[i].style %>  </p>
                <p id="dahspecdescinf"><%= options[i].ppsf%> Per Square Foot</p>
            </div>
          </div>
              <% } %>
        </div>
        <div id="bar">
          <h3 id="informer"><a id="buypepplusbtn" href="#">Buy <h3 id="idk1">Pepper+</h3></a> : Unlimited Warranty   |   10% Off Future Blinds   |   25% Off Installations   |   $10 Per Year</h3>
        </div>
        <div id="moreoffers">
          <h4 id="mofontstuff">More Offers...</h4>
          <div id="mOffers">
            <div id="mOfferInfo">
              <h1 id="dahmorenameinf"><a href="#" class="gotoblindpurchase">Decent Blinds</a></h1>
                <p id="dahmoredescinf">Wow... take a look at these Blinds...</p>
            </div>
          </div>
        </div>
      </div>
      <div id="paypalstuff">
        <button type="button" id="closepaypal">X</button>
        <div id="paypepplus">Sign up for <h1 id="pepplus">Pepper</h1><h1 id="pepplus2">+</h1>
          <div id="payinfostuff">
            <h1 id=payinf>Unlimited Warranty  |   10% Off Future Blinds  |   25% Off Installations </h1>
            <!-- <br class="break"> -->
            <h1 id="payinf1">$10</h1><h1 id=payinf1-2>/Year</h1>
            <!-- <br class="break"> -->
            <h1 id="payinf2">You Would Save $25 On Your Current Purchase </h1>
            <button type="button" id="paypalbtn">
              <!-- <img href="https://i0.wp.com/ascendhealthdenver.com/new/wp-content/uploads/2015/02/paypal-checkout-button.png?fit=505%2C262" alt="paypal"> -->
            </button>
          </div>
        </div>
      </div>
      <div id="profilebtnstuff">
        <div class="theprofilebtns">
          <h2 id="dahprofiletext">My Profile</h2>
          <hr><br>
          <div id="profilepage">
            <button type="button" name="gotoprofile" onclick="go2profile" class="profilebtns" id="profilebtn">Profile Page</button>

          </div>
          <div id="logout">
            <button type="button" name="logout" class="profilebtns" id="logoutbtn">Logout</button>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="/assets/homepage.js" charset="utf-8">></script>
</html>
